<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NotePicker" parent="Theme.AppCompat.NoActionBar">
        <item name="background">@color/background</item>
        <item name="colorAccent">@color/primary</item>
        <item name="fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="TabItemTextStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="TabSelectItemTextStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/pretendard_extrabold</item>
    </style>

    <declare-styleable name="TouchImageView">
        <attr name="zoom_enabled" format="boolean" />
    </declare-styleable>
</resources>