<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DefaultTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/default_text</item>
    </style>

    <style name="RegularTextView" parent="DefaultTextView">
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="MediumTextView" parent="DefaultTextView">
        <item name="android:fontFamily">@font/pretendard_medium</item>
    </style>

    <style name="SemiBoldTextView" parent="DefaultTextView">
        <item name="android:fontFamily">@font/pretendard_semibold</item>
    </style>

    <style name="BoldTextView" parent="DefaultTextView">
        <item name="android:fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="ExtraBoldTextView" parent="DefaultTextView">
        <item name="android:fontFamily">@font/pretendard_extrabold</item>
    </style>
</resources>